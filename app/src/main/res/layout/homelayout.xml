<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="10dp"
    android:background="@drawable/appback">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tvJobtitle"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginHorizontal="12dp"
        android:layout_marginTop="8dp"
        android:textSize="20sp"
        android:text="jobtitle"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tvDescription"
        app:layout_constraintTop_toBottomOf="@+id/tvJobtitle"
        android:layout_marginHorizontal="8dp"
        android:textSize="18sp"
        android:text="Description"
        app:layout_constraintLeft_toLeftOf="parent"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tvBudgetTime"
        app:layout_constraintTop_toBottomOf="@+id/tvDescription"
        android:layout_marginHorizontal="8dp"
        android:textSize="18sp"
        android:text="budgettime"
        app:layout_constraintLeft_toLeftOf="parent"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tvSkills"
        app:layout_constraintTop_toBottomOf="@+id/tvBudgetTime"
        android:layout_marginHorizontal="8dp"
        android:textSize="18sp"
        android:text="skillsneeded"
        app:layout_constraintLeft_toLeftOf="parent"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tvPosted"
        app:layout_constraintTop_toBottomOf="@+id/tvSkills"
        android:layout_marginHorizontal="8dp"
        android:textSize="18sp"
        android:text="Posted By"
        app:layout_constraintLeft_toLeftOf="parent"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Apply"
        android:visibility="invisible"
        android:id="@+id/applyBTN"
        app:layout_constraintTop_toBottomOf="@+id/tvPosted"
        app:layout_constraintEnd_toEndOf="parent"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_marginVertical="6dp"
        android:text="Delete"
        android:id="@+id/deleteBTN"
        android:visibility="invisible"
        android:background="#DA4444"
        app:layout_constraintTop_toBottomOf="@+id/tvPosted"
        app:layout_constraintLeft_toRightOf="@id/updateBTN"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Update"
        android:id="@+id/updateBTN"
        app:layout_constraintTop_toBottomOf="@+id/tvPosted"
        app:layout_constraintLeft_toLeftOf="parent"
        android:visibility="invisible"
        />

</androidx.constraintlayout.widget.ConstraintLayout>